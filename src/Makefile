#compiler flags. -g for debug, -03 for optimization
CFLAGS=-g -O3

#first target is built by default
all: test

# include file dependencies
tokenizer.o: tokenizer.h
history.o: history.h
uimain.o: uimain.c

# $@=target, $^=prerequisites
test: tokenizer.o uimain.o history.o
	cc -o $@ $^ $(CFLAGS)

#delets files generated by compilation
clean:
	rm -f *.o test
run: test
	./test
